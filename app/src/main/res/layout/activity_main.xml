<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="699dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998">

        <TextView
            android:id="@+id/txtresultado"
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:gravity="bottom|end"
            android:background="@drawable/boder_textview"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/txtoperador1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/boder_textview"
            android:clickable="true"
            android:contextClickable="true"
            android:cursorVisible="true"
            android:editable="false"
            android:gravity="bottom|end"
            android:hint="0"
            android:inputType="none"
            android:paddingEnd="6dp"

            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/operacion"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/txtoperador2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/boder_textview"
            android:editable="false"
            android:gravity="bottom|end"
            android:hint="0"
            android:inputType="none"
            android:paddingEnd="6dp"
            android:textColor="@color/black"
            android:textSize="40sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="439dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btn1"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btn1"
            android:text="1"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn4" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btn2"
            android:text="2"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />

        <Button
            android:id="@+id/btnmenos"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btnmenos"
            android:text="-"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            app:layout_constraintTop_toBottomOf="@+id/btnmas" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btn3"
            android:text="3"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btndiv"
            android:text="/"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn0"
            app:layout_constraintTop_toBottomOf="@+id/btn3" />

        <Button
            android:id="@+id/btnpor"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btnpor"
            android:text="*"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btndiv"
            app:layout_constraintTop_toBottomOf="@+id/btnmenos" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btn0"
            android:text="0"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn2" />

        <Button
            android:id="@+id/btnborrar"

            android:layout_width="101dp"
            android:layout_height="101dp"
            android:backgroundTint="#00FFFFFF"
            android:gravity="top|end"
            android:onClick="btnborrar"
            android:textSize="24sp"
            app:icon="@drawable/ic_baseline_backspace_24"
            app:iconPadding="0dp"
            app:iconTint="@color/purple_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn1" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btn6"
            android:text="6"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn5"
            app:layout_constraintTop_toBottomOf="@+id/btn9" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btn5"
            android:text="5"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn4"
            app:layout_constraintTop_toBottomOf="@+id/btn8" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margintop"
            android:onClick="btn4"
            android:text="4"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn7" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margen"
            android:onClick="btn7"
            android:text="7"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margen"
            android:onClick="btn8"
            android:text="8"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margen"
            android:onClick="btn9"
            android:text="9"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn8"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnmas"
            android:layout_width="81dp"
            android:layout_height="169dp"
            android:layout_marginStart="@dimen/margen"
            android:layout_marginTop="@dimen/margen"
            android:onClick="btnmas"
            android:text="+"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>